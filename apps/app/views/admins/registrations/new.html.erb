<div class="mx-auto md:w-2/3 w-full">
  <h1 class="text-4xl font-bold">Admin Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "contents"}) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="my-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "frm_ln"  %>
  </div>

  <div class="my-5">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "frm_ln"  %>
  </div>

  <div class="my-5">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "frm_ln"  %>
  </div>

  <div class="inline">
    <%= f.submit "Sign up", class: "frm_btn bg-blue-600" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
</div>
