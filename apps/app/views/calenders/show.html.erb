<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @calender %>

    <%= link_to "Edit this calender", edit_calender_path(@calender), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to calenders", calenders_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this calender", @calender, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
